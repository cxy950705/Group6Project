<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.group6.babytime.ablumactivity.AlbumInfoActivity">
    <RelativeLayout
        android:id="@+id/albumpage_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ListView
            android:id="@+id/lv_head"
            android:background="@drawable/backgroud1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            />

        <ImageView
            android:id="@+id/iv_album_back"
            android:src="@drawable/ic_community_back_sel"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="30dp"
            />
        <ImageView
            android:id="@+id/iv_album_dian"
            android:src="@drawable/ic_community_detail_more_sel"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="4dp"
            />
        <TextView
            android:id="@+id/tv_albumname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:text="宝宝一周岁"
            />
        <TextView
            android:id="@+id/tv_albummiaoshu"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="15dp"
            android:layout_centerHorizontal="true"

            android:layout_below="@id/tv_albumname"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="宝宝，希望你健康快乐的成长"/>

        <RelativeLayout
            android:id="@+id/ll_up"

            android:layout_width="match_parent"
            android:background="#ffffff"
            android:gravity="center"
            android:layout_gravity="top"
            android:layout_marginTop="160dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/tv_up_photo_btn"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:background="#00BFFF"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#778899"
                android:text="上传照片"
                />

        </RelativeLayout>
    </RelativeLayout>
    <GridView
        android:id="@+id/gv_album_list_gridview"
        android:layout_below="@id/albumpage_second"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="20dp"
        android:numColumns="4"
        android:gravity="center"
        />


</RelativeLayout>
