<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.group6.babytime.home.ChangeBabyActivity">
    <include
        android:id="@+id/changebabypage_top"
        layout="@layout/dingbulayout"/>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#F2F2F2"
        android:layout_below="@id/changebabypage_top"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffff"
        android:id="@+id/rl_edit_head_image"
        android:layout_below="@id/view"
        >

        <TextView
            android:id="@+id/tv_headimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改宝宝头像"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:id="@+id/iv_head_image"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baby"
            android:layout_toLeftOf="@+id/iv_edit_head_image"
            android:layout_marginRight="25dp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/iv_edit_head_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/iv_editinfo"
            />
    </RelativeLayout>
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#F2F2F2"
        android:layout_below="@id/rl_edit_head_image"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:id="@+id/rl_edit_name"
        android:layout_below="@id/view2"
        >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宝宝昵称"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/tv_real_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_edit_name"
            android:layout_marginRight="25dp"
            android:layout_centerVertical="true"
            android:text="小朱"
            />
        <ImageView
            android:id="@+id/iv_edit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/iv_editinfo"
            />
    </RelativeLayout>


    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#F2F2F2"
        android:layout_below="@id/rl_edit_name"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:id="@+id/rl_edit_sex"
        android:layout_below="@id/view3"
        >

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宝宝性别"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/tv_real_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_edit_sex"
            android:layout_marginRight="25dp"
            android:layout_centerVertical="true"
            android:text="男"
            />
        <ImageView
            android:id="@+id/iv_edit_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/iv_editinfo"
            />
    </RelativeLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#F2F2F2"
        android:layout_below="@id/rl_edit_sex"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:id="@+id/rl_edit_birth"
        android:layout_below="@id/view4"
        >

        <TextView
            android:id="@+id/tv_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宝宝出生日期"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/tv_real_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_edit_birth"
            android:layout_marginRight="25dp"
            android:layout_centerVertical="true"
            android:text="2016年1月2日"
            />
        <ImageView
            android:id="@+id/iv_edit_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/iv_editinfo"
            />
    </RelativeLayout>


</RelativeLayout>
