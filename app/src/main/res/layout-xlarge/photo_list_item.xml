<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="#ffffff"
    android:focusable="false"
    >
    <RelativeLayout
        android:id="@+id/id_photo_list_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        >
        <ImageView
            android:id="@+id/photo_item_iv_left"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@mipmap/ic_launcher"/>

        <RelativeLayout
            android:id="@+id/photo_item_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignBaseline="@id/photo_item_iv_left"
            android:layout_toRightOf="@id/photo_item_iv_left">
            <ImageView
                android:id="@+id/photo_item_list_tiaozhuan"
                android:src="@drawable/rightjiantou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="4dp"


                />
            <TextView
                android:id="@+id/photo_item_list_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/photo_item_info_tv2"
                android:textSize="20sp"

                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:textColor="@android:color/black"
                android:text="相册名称"
                />
            <TextView
                android:id="@+id/photo_item_info_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:layout_toLeftOf="@+id/photo_item_list_tiaozhuan"

                android:paddingTop="8dp"
                android:textColor="#000"
                android:text="30张"
                android:textSize="20sp"
                />
        </RelativeLayout>

    </RelativeLayout>





</RelativeLayout>
