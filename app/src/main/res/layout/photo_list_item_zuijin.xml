<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="3dp"
        android:text="10月10日"
        android:textSize="15sp"
        android:textColor="#000000"
        />





    <com.group6.babytime.utils.MyGridView
        android:id="@+id/gridview"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_time"
        android:layout_marginLeft="5dp"

        android:layout_toRightOf="@id/tv_time"
        android:columnWidth="70dp"
        android:gravity="center"
        android:horizontalSpacing="2.5dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="2.5dp" />

    <TextView
        android:id="@+id/tv_phomiaoshu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/gridview"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:text="今天带宝宝出去游玩了.."
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_pho_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/gridview"
        android:layout_below="@id/tv_phomiaoshu"
        android:layout_marginTop="3dp"
        android:text="共10张"
        android:textSize="12sp"
        />


</RelativeLayout>
