<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#F8CA00</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="style_RadioButton">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textColor">@drawable/text_changed_selector</item>
        <item name="android:gravity">center_horizontal</item>

    </style>
    
    <style name="style_more_button">
        <item name="android:layout_width">match_parent</item>>
        <item name="android:layout_height">wrap_content</item>>
        <item name="android:textColor">@color/font_color_more</item>
        <item name="android:background">#ffffff</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:button">?android:attr/borderlessButtonStyle</item>
    </style>

    <!-- 意见反馈的TextView 属性设置-->
    <style name="style_more_feedback">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">16dp</item>

    </style>
    <!-- 意见反馈的EditText 属性设置-->
    <style name="style_edittext_feedback">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:drawable/edit_text</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>
</resources>
