<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.group6.babytime.home.AddBaby2Activity">
    <include
        android:id="@+id/changebabypage_top"
        layout="@layout/dingbulayout"/>
    <View
        android:id="@+id/view11"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#F2F2F2"
        android:layout_below="@id/changebabypage_top"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffff"
        android:id="@+id/rl_edit_head_image11"
        android:layout_below="@id/view11"
        >

        <TextView
            android:id="@+id/tv_headimage11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加宝宝头像"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:id="@+id/iv_head_image11"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/addkuang"
            android:layout_toLeftOf="@+id/iv_edit_head_image11"
            android:layout_marginRight="25dp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/iv_edit_head_image11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/iv_editinfo"
            />
    </RelativeLayout>
    <View
        android:id="@+id/view12"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#F2F2F2"
        android:layout_below="@id/rl_edit_head_image11"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:id="@+id/rl_edit_name22"
        android:layout_below="@id/view12"
        >

        <TextView
            android:id="@+id/tv_name22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宝宝昵称"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/tv_real_name22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_edit_name22"
            android:layout_marginRight="25dp"
            android:layout_centerVertical="true"
            android:text="宝宝"
            />
        <ImageView
            android:id="@+id/iv_edit_name22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/iv_editinfo"
            />
    </RelativeLayout>


    <View
        android:id="@+id/view13"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#F2F2F2"
        android:layout_below="@id/rl_edit_name22"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:id="@+id/rl_edit_birth33"
        android:layout_below="@id/view13"
        >

        <TextView
            android:id="@+id/tv_birth33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宝宝出生日期"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/tv_real_birth33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_edit_birth33"
            android:layout_marginRight="25dp"
            android:layout_centerVertical="true"
            android:text="2016年1月2日"
            />
        <ImageView
            android:id="@+id/iv_edit_birth33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/iv_editinfo"
            />
    </RelativeLayout>
    <View
        android:id="@+id/view14"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#F2F2F2"
        android:layout_below="@id/rl_edit_birth33"
        />
    <RelativeLayout
        android:id="@+id/rl_guanxi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/view14"
        android:background="#aaa"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你与宝宝的关系："
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"

            />
    </RelativeLayout>
    <RadioGroup
        android:id="@+id/ll_guanxi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/rl_guanxi"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/btn_guanxi1"
            style="@style/style_RadioButton1"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:text="妈妈"/>
        <RadioButton
            android:id="@+id/btn_guanxi2"
            style="@style/style_RadioButton1"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="爸爸"/>
        <RadioButton
            android:id="@+id/btn_guanxi3"
            style="@style/style_RadioButton1"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+其他+"/>

    </RadioGroup>
    <RelativeLayout
        android:id="@+id/rl_addbaby_dibu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_guanxi"
        android:background="#aaa">
        <Button
            android:id="@+id/btn_addbabytrue"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:text="确定"
            android:visibility="gone"
            />
    </RelativeLayout>
</RelativeLayout>
