<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<com.group6.babytime.titlebar.TitleBar
    android:id="@+id/titlebar"
    android:layout_marginTop="5dp"
    android:layout_above="@+id/rl_top"
    android:layout_width="match_parent"
    android:layout_height="30dp">

</com.group6.babytime.titlebar.TitleBar>
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_story"
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_story"
            android:text="这是故事介绍"/>
        <ImageView
            android:id="@+id/iv_likes"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/like_before"
            android:layout_below="@+id/tv_introduction"
            android:layout_toRightOf="@+id/image_story"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_story_content"
        android:layout_below="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="this is the stories' content"/>
</LinearLayout>
