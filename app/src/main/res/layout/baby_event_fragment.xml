<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:background="@color/antiquewhite"
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/iv_yici"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:src="@drawable/first_pic001"/>
        <TextView
            android:id="@+id/tv_fir"
            android:layout_width="wrap_content"
            android:text="宝宝第一次"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:paddingRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_fir_describle"
            android:layout_below="@+id/tv_fir"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="记录妈妈宝宝的美好回忆"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/antiquewhite"
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/iv_yimiao"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:src="@drawable/vacine_pic"
            />
        <TextView
            android:id="@+id/tv_sec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:paddingRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="疫苗接种"/>
        <TextView
            android:id="@+id/tv_sec_descible"
            android:layout_below="@+id/tv_sec"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="按时接种，预防疾病"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/antiquewhite"
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/iv_czjl"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:src="@drawable/group_record_pic"
            />
        <TextView
            android:id="@+id/tv_thir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:paddingRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="成长记录"/>
        <TextView
            android:id="@+id/tv_thir_describle"
            android:layout_below="@+id/tv_thir"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="关爱宝宝成长每一天"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginBottom="30dp"
        android:background="@color/antiquewhite"
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/iv_tt"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:src="@drawable/baby_listen_pic"
            />
        <TextView
            android:id="@+id/tv_fur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:paddingRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="宝宝听听"/>
        <TextView
            android:id="@+id/tv_fur_describle"
            android:layout_below="@+id/tv_fur"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="适合宝宝倾听的活泼儿歌"/>
    </RelativeLayout>

</LinearLayout>
